<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
           <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
              <div class="navbar-header">
                <%= link_to 'Home', root_path, class: 'navbar-brand'%>
              </div>
              <div>
                <ul class="nav navbar-nav">
                  <%#= link_to 'Home', root_path, class: 'active' %>
                  <%= link_to 'New English Word', new_english_path %>
                  <%= link_to 'Add Language', new_language_path %><!-- transfer this to where you add translation -->
                  <%= link_to 'Add Word' %>
                  <%= link_to 'Add Translation', new_translation_path %>
                </ul>
              </div>
            </div>
          </nav>
      </div>
      <div class="col-lg-12">
        <p class="notice"><%= notice %></p>
        <p class="alert alert-info"><%= alert %></p>
      </div>
    </div>
  
  
    <%= yield %>
  </div>
</body>
</html>
